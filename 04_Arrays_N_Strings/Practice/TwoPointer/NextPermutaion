class Solution {
    public void nextPermutation(int[] nums) {
        int n = nums.length;
        int index  = -1;
        //find first decreasing element from right or the breaking point
        for(int i = n-2 ; i >= 0 ; i--){
            if( nums[i] < nums[i+1]){
                index = i;
                break;
            }
        }
        //if no breaking point found that means array is in descending order so reverse the whole array
        if( index == -1){
            reverse(nums,0,n-1);
            return;
        }
        //find the just larger element than breaking point from right side and swap
        for(int i = n-1 ; i > index ; i--){
            if(nums[i] > nums[index]){
                swap(nums,i,index);
                break;
            }
        }
        //reverse the right side of breaking point
         reverse(nums,index+1,n-1);

    }
    public void reverse(int[] a,int s,int e){
            while(s < e){
                swap(a,s++,e--);;
            }
    }
    public void swap(int[] a,int s,int e){
           int x = a[s];
           a[s] = a[e];
           a[e] = x;
    }
    
}